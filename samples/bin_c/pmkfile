# $Id$

# settings
SETTINGS {
	LANG = "C"
	TARGET = ("Makefile.pmk","config.h.pmk")
}

DEFINE {
	PACKAGE = "hello"
	VERSION = "1.0"
	FULL_NAME = "$PACKAGE-$VERSION"
}

# checking strlcpy() in string.h
CHECK_HEADER(function_strlcpy) {
	REQUIRED = TRUE
	NAME = "string.h"
	FUNCTION = "strlcpy"
}

# checking strlcat() in string.h
CHECK_HEADER(function_strlcat) {
	REQUIRED = TRUE
	NAME = "string.h"
	FUNCTION = "strlcat"
}
