}

ADD_COMPILER {
	ID = "xlc_cc"
	DESCR = "IBM C"
	MACRO = "__IBMC__"
	VERSION = "__IBMC__"
	# no flags needed for PIC
	SLCFLAGS = ""
	SLLDFLAGS = "-G"
}

ADD_COMPILER {
	ID = "xlc_cxx"
	DESCR = "IBM C++"
	MACRO = "__IBMCPP__"
	VERSION = "__IBMCPP__"
	# no flags needed for PIC
	SLCFLAGS = ""
	SLLDFLAGS = "-G"
}

ADD_COMPILER {
	ID = "icc"
	DESCR = "Intel"
	MACRO = "__INTEL_COMPILER"
	VERSION = "__INTEL_COMPILER"
	SLCFLAGS = "XXX flags not set in pmkcomp.dat XXX"
	SLLDFLAGS = "-shared"
}

ADD_COMPILER {
	ID = "mpro"
	DESCR = "SGI MIPSpro"
	MACRO = "__sgi"
	VERSION = "_COMPILER_VERSION"
	SLCFLAGS = "-KPIC"
	SLLDFLAGS = "-shared"
}

