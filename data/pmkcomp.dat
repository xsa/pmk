ADD_SYSTEM {
	NAME = "Darwin"
	SL_EXT = ".dylib"
	SL_VERSION = "$SL_MAJOR.$SL_MINOR"
	SL_LIBNAME = "lib$SL_NAME$SL_EXT"
	SL_LIBNAME_VMAJ = "lib$SL_NAME.$SL_MAJOR$SL_EXT"
	SL_LIBNAME_VFULL = "lib$SL_NAME.$SL_VERSION$SL_EXT"
	SLLDFLAGS_gcc = "-dynamiclib"
}

